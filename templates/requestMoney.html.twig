<!-- Image and text -->
<nav class="navbar navbar-light" style="background-color:#c00">
	<a class="navbar-brand" href="#">
		<img src="http://www.njit.edu//sites/all/themes/corporate2018dev/logo.svg" width="200px" height="60px" class="d-inline-block align-top" alt="">
	</a>
</nav>


<div class="container" style="margin-top:5%">
	<div class="row" >
		<div class="col-md-7" style="">
			<form id="form" action="requestAction" method="post">
				<label id="emailHelp" class="form-text text-muted">Request Money</label>
				<div class="form-row">
					<div class="col">
						<label for="exampleInputEmail1">Email or Phone</label>
						<input type="text" class="form-control" name="email0" id="" aria-describedby="" placeholder="">
					</div>
					<div class="col">
						<label for="exampleInputEmail1">Amount</label>
						<div class="input-group mb-3">
							<div class="input-group-prepend">
								<span class="input-group-text">$</span>
							</div>
							<input type="number" name="amount0" class="form-control" aria-label="" placeholder="Amount" >
						</div>
					</div>
				</div>
				<div class="form-group">
					<button type="button" id="addRow" class="btn btn-outline-primary btn-sm" onclick="addRow">+</button>
				</div>
				<div class="form-group">
					<label for="exampleInputEmail1">Memo</label>
					<div class="input-group">
						<textarea name="memo" class="form-control" aria-label=""></textarea>
					</div>
				</div>
				<div class="form-group">
					<input type="text" name="fromUserid" class="form-control"  style="display:none"  value="{{ userId }}">
					<input type="text" name="fromTokenid" class="form-control"  style="display:none"  value="{{ tokenId }}">
					<input id="requestCount" type="text" name="requestCount" class="form-control"  style="display:none"  value="1">
				</div>
				<button type="submit" class="btn btn-primary" style="margin-top:15px">Submit</button>
			</form>
		</div>
	</div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
<script>
var i = 1;
$("#addRow").click(function(){
	var input = '<div class="form-row"><div class="col"><label for="exampleInputEmail1">Email or Phone</label><input type="text" class="form-control" name="email'+i+'" aria-describedby="" placeholder=""></div><div class="col"><label for="exampleInputEmail1">Amount</label><div class="input-group mb-3"><div class="input-group-prepend"><span class="input-group-text">$</span></div><input type="number" name="amount'+i+'" class="form-control" aria-label="" placeholder="Amount" ></div></div></div>';
	$("#addRow").before(input);
	$("#requestCount").attr("value", i+1);

	i++;
});
</script>
