<div class="container" style="margin-top:5%">
	<div class="row" >
		<div class="col-md-7" style="">
			<form action="signup" method="post">
				<label id="emailHelp" class="form-text text-muted">New User? Sign Up</label>
				<div class="form-group">
					<label for="exampleInputEmail1">Email address</label>
					<input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
				</div>
				<div class="form-group">
					<label for="exampleInputEmail1">Phone</label>
					<input type="number" name="phone" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Phone">
				</div>
				<div class="form-group">
					<label for="exampleInputEmail1">First Name</label>
					<input type="text" name="firstName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="First Name">
				</div>
				<div class="form-group">
					<label for="exampleInputEmail1">SSN</label>
					<input type="text" name="ssn" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="ssn">
				</div>

				<div class="form-group">
					<label for="exampleInputEmail1">Last Name</label>
					<input type="text" name="lastName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Last Name">
				</div>
				<div class="form-group">
					<label for="exampleInputPassword1">Password</label>
					<input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
			</form>

		</div>
		<div class="col-md-5" style="">

			<form action="login" method="post">
				<label id="emailHelp" class="form-text text-muted">Existing User? Login</label>
				<div class="form-group">
					<label for="exampleInputEmail1">Email address</label>
					<input type="email" name="email" class="form-control {% if validateError %} is-invalid {% endif %}"  id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
				</div>
				<div class="form-group">
					<label for="exampleInputPassword1">Password</label>
					<input type="password" name="password" class="form-control {% if validateError %} is-invalid {% endif %}" id="exampleInputPassword1" placeholder="Password">
					{% if validateError %}
					<div class="invalid-feedback">
						Please check your login credentials
					</div>
					{% endif %}
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
			</form>

		</div>

	</div>
</div>

