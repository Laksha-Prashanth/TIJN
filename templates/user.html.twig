<!-- Image and text -->
<nav class="navbar navbar-light" style="background-color:#c00">
	<a class="navbar-brand" href="#">
		<img src="http://www.njit.edu//sites/all/themes/corporate2018dev/logo.svg" width="200px" height="60px" class="d-inline-block align-top" alt="">
	</a>
</nav>

<div class="jumbotron jumbotron-fluid">
	  <div class="container">
		  <h1 class="display-4">Welcome, {{ firstName }}</h1>
			    </div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-6">
			<button type="button" class="btn btn-primary btn-lg btn-block">Send Money</button>
		</div>
		<div class="col-md-6">
			<button type="button" class="btn btn-primary btn-lg btn-block">Request Money</button>
		</div>
	</div>
</div>

<div class="container" style="margin-top:3%">
	<div class="row">
		<div class="col-md-12">
			{% if isConfirmed == 'N' %}
			<div class="text-center"> <button type="button" class="btn btn-outline-danger">You have not confirmed your email / phone. Click here to confirm it</button> </div>
			{% endif %}
			<h5 style="color:green">Account Balance: $ {{ balance }}</h5>
		</div>
	</div>
	<div class="row" style="margin-top:3%">
		<div class="col-md-12">
			<h4 style="">Your Summary</h4>
			<table class="table table-borderless">
				<tr>
					<td> 
						First Name 
					</td>
					<td>
						{{ firstName }}
					</td>
				</tr>
				<tr>
					<td> 
						Last Name 
					</td>
					<td>
						{{ lastName }}
					</td>
				</tr>
				<tr>
					<td> 
						SSN
					</td>
					<td>
						{{ ssn }}
					</td>
				</tr>
				<tr>
					<td> 
						Plan
					</td>
					<td>
						{{ plan }}
					</td>
				</tr>
			</table>
		</div>
	</div>
</div>


<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
