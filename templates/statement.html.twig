<div class="container" style="margin-top:5%">
<form action="statements" method="post"> 
	<div class="form-row">
		<div class="col">
			<label for="exampleInputEmail1">From</label>
			<input type="text" class="form-control" name="start" id="" aria-describedby="" placeholder="">
		</div>
		<div class="col">
			<label for="exampleInputEmail1">To</label>
			<input type="text" class="form-control" name="end" id="" aria-describedby="" placeholder="">
		</div>
	</div>
	<div class="text-center">
		<input type="text" name="userId" class="form-control"  style="display:none"  value="{{ userId }}">
		<button type="submit" class="btn btn-primary" style="margin-top:15px">Submit</button>
	</div>
</form>
</div>

<div class="container">
	<div class="row">
		<div class="col">
			<table class="table">
				<tr><th>From</th><th>To</th><th>Date</th><th>Amount</th><th>Memo</th></tr>
				{% for row in statement %}
				<tr class="">
					<td>{{ row.FROM_USERID }}</td>
					<td>{{ row.TO_USERID }}</td>
					<td>{{ row.PAYMENT_TIME }}</td>
					<td>{{ row.AMOUNT }}</td>
					<td>{{ row.MEMO }}</td>
				</tr>
				{% endfor %}
			</table>

		</div>
	</div>
</div>

